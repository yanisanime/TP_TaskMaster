<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="taskMasterProjet.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:taskMasterProjet.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Accueil"
        ContentTemplate="{DataTemplate views:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" /> 

    <ShellContent
        Title="CreateAccount"
        ContentTemplate="{DataTemplate views:CreateAccountPage}"
        Route="CreateAccountPage" />

    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:DashboardPage}"
        Route="DashboardPage" />


</Shell>