<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:taskMasterProjet.ViewModels"
             x:Class="taskMasterProjet.Views.Components.TaskItemView"
             x:Name="root"
             Padding="10"
             Margin="5">
	<Grid BindingContext="{x:Reference root}"
          ColumnDefinitions="*,Auto"
          RowDefinitions="Auto,Auto,Auto">

		<Label Text="{Binding Task.Titre}" FontSize="16" FontAttributes="Bold"
               Grid.Column="0" Grid.Row="0"/>

		<Label Text="{Binding Task.Statut}"
               Grid.Column="1" Grid.Row="0"
               TextColor="{Binding Task.Statut, Converter={StaticResource StatusToColorConverter}}"/>

		<Label Text="{Binding Task.Description}"
               Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"/>

		<HorizontalStackLayout Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" Spacing="10">
			<Button Text="Modifier"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DashboardViewModel}}, Path=EditTaskCommand}"
                    CommandParameter="{Binding Task}"
                    WidthRequest="100"/>
			<Button Text="Supprimer"
                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DashboardViewModel}}, Path=DeleteTaskCommand}"
                    CommandParameter="{Binding Task}"
                    WidthRequest="100"/>
		</HorizontalStackLayout>
	</Grid>
</ContentView>